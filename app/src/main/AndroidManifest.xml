<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.devwithbruno.www.movart">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name="com.devwithbruno.www.movart.App"
        android:theme="@style/AppTheme">
        <activity android:name="com.devwithbruno.www.movart.ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.devwithbruno.www.movart.ui.video.VideoActivity" />
        <activity android:name="com.devwithbruno.www.movart.ui.details.DetailsActivity" />
        <activity android:name="com.devwithbruno.www.movart.utils.PlayVideoActivity" />
        <activity android:name="com.devwithbruno.www.movart.ui.artistsdetails.ArtistsActivity"/>
        <activity android:name="com.devwithbruno.www.movart.ui.profil.ProfileActivity"/>
    </application>

</manifest>