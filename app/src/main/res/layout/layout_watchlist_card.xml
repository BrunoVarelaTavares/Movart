<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/imagePoster"
        android:layout_width="75dp"
        android:layout_height="110dp"
        android:layout_margin="10dp"
        android:src="@color/white" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="7dp"
        android:layout_toRightOf="@id/imagePoster"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textViewYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/textViewTitle"
        android:textColor="@color/grey" />


    <ImageView
        android:id="@+id/ic_start"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@id/textViewTitle"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@+id/imagePoster"
        android:src="@drawable/ic_star" />

    <TextView
        android:id="@+id/textViewRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitle"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/ic_start"
        android:text="7/10"
        android:textColor="@color/grey" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/imagePoster"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:background="@color/grey"></View>


    <ImageView
        android:id="@+id/iv_bookmark"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6.5dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_bookmark"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_add"
        android:visibility="visible" />


    <ImageView
        android:id="@+id/iv_bookmark_green"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6.5dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_bookmark_green"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_check"
        android:visibility="visible" />


</RelativeLayout>