<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@color/gray_800"
    android:elevation="2dp"
    android:padding="2dp">

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/iv_youtube_poster"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        android:background="@color/black">

    </ImageView>

    <ImageView

        android:id="@+id/ivPlayer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/ic_player" />


    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/imagePoster"
        android:layout_width="108dp"
        android:layout_height="155dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="14dp"
        android:background="@color/gray_800"
        android:backgroundTint="@color/black">

    </ImageView>

    <ImageView
        android:layout_marginLeft="-3.5dp"
        android:id="@+id/iv_bookmark"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/imagePoster"
        android:layout_alignTop="@+id/imagePoster"
        android:src="@drawable/ic_bookmark"
        android:visibility="visible" />

    <ImageView
        android:layout_marginTop="7dp"
        android:id="@+id/iv_add"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignStart="@+id/imagePoster"
        android:layout_alignTop="@+id/imagePoster"
        android:layout_marginStart="6dp"
        android:src="@drawable/ic_add"
        android:visibility="visible" />


    <ImageView
        android:layout_marginLeft="-3.5dp"
        android:id="@+id/iv_bookmark_green"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/imagePoster"
        android:layout_alignTop="@+id/imagePoster"
        android:src="@drawable/ic_bookmark_green"
        android:visibility="gone" />


    <ImageView
        android:layout_marginTop="7dp"
        android:id="@+id/iv_check"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignStart="@+id/imagePoster"
        android:layout_alignTop="@+id/imagePoster"
        android:layout_marginStart="6dp"
        android:src="@drawable/ic_check"
        android:visibility="gone" />


    <TextView
        android:textStyle="italic|bold"
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imagePoster"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="34dp"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/imagePoster"
        android:textColor="@color/white" />

    <TextView
        android:textSize="13dp"
        android:textStyle="italic"
        android:id="@+id/tvReleaseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imagePoster"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/imagePoster"
        android:textColor="@color/grey" />


</RelativeLayout>