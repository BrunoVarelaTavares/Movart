<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:background="@color/greay_850"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relLayout1"
        android:elevation="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/gray_800">

        <TextView
            android:textSize="13dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"
            android:id="@+id/tw_desc"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_toLeftOf="@+id/iw_arrow_up"
            android:text="Videos em destaque na pagina inicial"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />


        <TextView
            android:text="2 de 15"
            android:textColor="@color/grey"
            android:layout_marginStart="10dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/tw_desc"
            android:id="@+id/iw_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />




        <ImageView
            android:scaleType="center"
            android:layout_marginEnd="2dp"
            android:src="@drawable/ic_arrow_up"
            android:id="@+id/iw_arrow_up"
            android:layout_alignParentEnd="true"
            android:layout_width="50dp"
            android:layout_height="match_parent" />


        <ImageView

            android:visibility="gone"
            android:scaleType="center"
            android:layout_marginEnd="2dp"
            android:src="@drawable/ic_arrow_down"
            android:id="@+id/iw_arrow_down"
            android:layout_alignParentEnd="true"
            android:layout_width="50dp"
            android:layout_height="match_parent" />

    </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_below="@id/relLayout1"
            android:padding="2dp"
            android:background="@color/greay_850"
            android:id="@+id/recycler_view_slide_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:clipToPadding="false"
            android:scrollbars="horizontal" />


    </RelativeLayout>
</merge>