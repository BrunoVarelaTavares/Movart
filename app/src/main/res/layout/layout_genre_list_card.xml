<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/iv_image_genre_list"
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" />


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_cast"
        android:layout_alignTop="@+id/iv_image_genre_list"
        android:layout_marginTop="19dp"
        android:textColor="@color/white"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tv_cast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ic_start"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="5dp"
        android:textColor="@color/grey"
        android:textStyle="italic" />


    <ImageView
        android:id="@+id/ic_start"
        android:layout_width="30dp"
        android:layout_height="30dp"

        android:layout_alignBottom="@+id/iv_image_genre_list"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/iv_image_genre_list"
        android:src="@drawable/ic_star" />

    <TextView
        android:id="@+id/tv_vote"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ic_start"
        android:layout_marginStart="7dp"
        android:layout_toEndOf="@+id/ic_start"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold|italic" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/iv_image_genre_list"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:background="@color/grey"></View>


    <ImageView
        android:id="@+id/iv_bookmark"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_bookmark"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_add"
        android:visibility="visible" />


    <ImageView
        android:id="@+id/iv_bookmark_green"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_bookmark_green"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_check"
        android:visibility="gone" />


</RelativeLayout>