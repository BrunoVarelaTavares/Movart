<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greay_850">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:background="@color/greay_850"
        android:elevation="10dp"
        android:padding="2dp"
        card_view:cardCornerRadius="1dp">

        <RelativeLayout
            android:background="@color/greay_850"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imageBackgroundPoster"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="10dp"
                android:scaleType="fitXY"
                android:alpha="0.05"/>


            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@id/imagePoster"
                android:src="@drawable/a"
                android:layout_width="150dp"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="140dp"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />


            <TextView
                android:id="@+id/textViewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imagePoster"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Bruno Tavares"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/textViewYearOfBirth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewName"
                android:layout_centerHorizontal="true"
                android:text="20 Jan 1985"
                android:textColor="@color/grey"
                android:textSize="16dp"
                android:textStyle="italic|bold" />


            <RelativeLayout
                android:id="@id/relLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp">


                <RelativeLayout
                    android:id="@+id/relLayoutFilm"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="1dp"
                    android:layout_toLeftOf="@id/relLayoutBio"
                    android:background="@drawable/rounded_border_gray_600">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_movies" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relLayoutBio"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="1dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/rounded_border_gray_600">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="Bio"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="italic" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/relLayoutImages"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="1dp"
                    android:layout_toRightOf="@id/relLayoutBio"
                    android:background="@drawable/rounded_border_gray_600">


                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_images" />


                </RelativeLayout>


            </RelativeLayout>


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>