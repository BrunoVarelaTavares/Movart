<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/greay_850">

        <RelativeLayout
            android:id="@+id/relLayoutYoutube"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@color/gray_800"
            android:elevation="10dp">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_Youtube"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:background="@color/gray_800"
                android:clipToPadding="false"
                android:padding="2dp"
                android:scrollbars="horizontal" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relLayoutPMovies"
            android:layout_width="match_parent"
            android:layout_height="325dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relLayoutYoutube"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:background="@color/gray_800"
            android:elevation="10dp">

            <TextView
                android:id="@+id/tvMovies"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginStart="5dp"
                android:padding="2dp"
                android:text="Popular Movies "
                android:textColor="@color/grey"
                android:textSize="15dp"
                android:textStyle="bold|italic" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvMovies"
                android:background="@color/gray_800"
                android:clipToPadding="false"
                android:padding="2dp"
                android:scrollbars="horizontal" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relLayoutPSeries"
            android:layout_width="match_parent"
            android:layout_height="325dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relLayoutPMovies"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:background="@color/gray_800"
            android:elevation="10dp">

            <TextView
                android:id="@+id/tvSeries"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginStart="5dp"
                android:padding="2dp"
                android:text="Popular Series "
                android:textColor="@color/grey"
                android:textSize="15dp"
                android:textStyle="bold|italic" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_p_series"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvSeries"
                android:background="@color/gray_800"
                android:clipToPadding="false"
                android:padding="2dp"
                android:scrollbars="horizontal" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relLayoutArtists"
            android:layout_width="match_parent"
            android:layout_height="325dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relLayoutPSeries"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:background="@color/gray_800"
            android:elevation="10dp">

            <TextView
                android:id="@+id/tvArtists"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginStart="5dp"
                android:padding="2dp"
                android:text="Artists "
                android:textColor="@color/grey"
                android:textSize="15dp"
                android:textStyle="bold|italic" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_artistis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvArtists"
                android:background="@color/gray_800"
                android:clipToPadding="false"
                android:padding="2dp"
                android:scrollbars="horizontal" />


        </RelativeLayout>


    </RelativeLayout>


</merge>